@model EventPlannerApp.Models.Guest

@{
    ViewData["Title"] = "Create Guest";
}

<h2>Create Guest</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="EventId" value="@ViewBag.EventId" />
    <button type="submit" class="btn btn-success">Добавить</button>
    <a href="@Url.Action("Index", "Events", new { eventId = ViewBag.EventId })" class="btn btn-warning">Отменить</a>
</form>
