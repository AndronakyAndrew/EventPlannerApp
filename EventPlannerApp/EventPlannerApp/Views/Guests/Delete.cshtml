@model EventPlannerApp.Models.Guest

@{
    ViewData["Title"] = "Delete Guest";
}

<h2>Delete Guest</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Guest</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Guests", new { eventId = Model.EventId })" class="btn btn-secondary">Cancel</a>
    </form>
</div>
