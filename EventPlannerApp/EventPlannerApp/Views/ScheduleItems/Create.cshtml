@model EventPlannerApp.Models.ScheduleItem

@{
    ViewData["Title"] = "Create Schedule Item";
}

<h2>Create Schedule Item</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" class="form-control" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="EventId" value="@ViewBag.EventId" />
    <button type="submit" class="btn btn-success">Добавить</button>
    <a href="@Url.Action("Index", "Events", new { eventId = ViewBag.EventId })" class="btn btn-warning">Отменить</a>
</form>
