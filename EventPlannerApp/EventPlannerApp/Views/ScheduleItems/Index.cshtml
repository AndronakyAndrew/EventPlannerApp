@model IEnumerable<EventPlannerApp.Models.ScheduleItem>

@{
    ViewData["Title"] = "Schedule";
}

<h2>Schedule</h2>

<table class="table">
    <thead>
        <tr>
            <th>Time</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model)
        {
            <tr>
                <td>@schedule.Time.ToString("g")</td>
                <td>@schedule.Description</td>
                <td>
                    <a href="@Url.Action("Edit", "ScheduleItems", new { id = schedule.Id })" class="btn btn-sm btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "ScheduleItems", new { id = schedule.Id })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Create", "ScheduleItems", new { eventId = ViewBag.EventId })" class="btn btn-primary">Add Schedule Item</a>
</p>
