@model EventPlannerApp.Models.BudgetItem

@{
    ViewData["Title"] = "Создать бюджет";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="BudgetItems">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="EventId" value="@ViewBag.EventId" />
    <button type="submit" class="btn btn-success">Добавить</button>
    <a href="@Url.Action("Index", "Events", new { eventId = ViewBag.EventId })" class="btn btn-warning">Отменить</a>
</form>